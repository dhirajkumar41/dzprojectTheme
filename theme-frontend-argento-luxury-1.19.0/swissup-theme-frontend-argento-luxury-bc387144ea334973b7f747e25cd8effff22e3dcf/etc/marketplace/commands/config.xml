            <item name="hovergallery/general/enabled">1</item>
            <item name="lightboxpro/popup/type">advanced</item>
            <item name="prolabels/on_sale/product/active">1</item>
            <item name="prolabels/on_sale/category/active">1</item>
            <item name="prolabels/is_new/product/active">1</item>
            <item name="prolabels/is_new/category/active">1</item>
            <item name="quantityswitcher/general/switcher_type">arrows</item>
            <item name="reviewreminder/general/enabled">1</item>
            <item name="richsnippets/breadcrumbs/enabled">1</item>
            <item name="soldtogether/order/enabled">1</item>
            <item name="soldtogether/order/count">4</item>
            <item name="soldtogether/customer/enabled">1</item>
            <item name="soldtogether/customer/count">4</item>
            <item name="swissup_easytabs/product_tabs/layout">accordion</item>
            <item name="swissup_easytabs/product_tabs/multipleCollapsible">1</item>
            <item name="swissup_easytabs/product_tabs/activeTabs">-1</item>
        </data>
    </command>
</config>
