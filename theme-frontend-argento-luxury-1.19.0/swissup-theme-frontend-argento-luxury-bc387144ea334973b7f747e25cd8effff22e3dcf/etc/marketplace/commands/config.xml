            </item>
            <item name="design/head/includes">
                <item name="remove"><![CDATA[<link  rel="stylesheet" type="text/css"  media="all" href="{{MEDIA_URL}}styles.css" />]]></item>
            </item>
            <item name="cms/wysiwyg/enabled">hidden</item>
            <item name="ajaxsearch/folded/enable">1</item>
            <item name="ajaxsearch/folded/effect">slide-down</item>
